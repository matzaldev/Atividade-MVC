<%-
  include('../layout', {
    title: veiculo ? `Editar veículo #${veiculo.id}` : 'Cadastrar veículo',
    body: `
      <form method="POST" action="${action}">
        <div style="margin-bottom:12px">
          <label for="nome">Nome do veículo</label><br/>
          <input id="nome" name="nome" value="${veiculo ? veiculo.nome : ''}" required style="padding:8px;width:100%;max-width:420px" />
        </div>
        <button class="btn" type="submit">${btn}</button>
        <a class="btn secondary" href="/veiculos">Voltar</a>
      </form>
    `
  })
%>